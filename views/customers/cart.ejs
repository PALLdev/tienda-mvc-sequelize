<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(products.length > 0) { %>
            <ul>
                <% products.forEach((prod) => { %>
                    <li>
                        <p><%= prod.productData.titulo %> (<%= prod.quantity %>)</p>
                        <form action="/cart-delete-item" method="POST">
                            <button type="submit" class="btn">Quitar del carro</button>
                            <input type="hidden" name="idCartItem" value="<%= prod.productData.id %>">
                        </form>
                    </li>
                <% }) %>
            </ul>

        <% } else { %>
